{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "importHelpers": false,
    "alwaysStrict": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "strict": true,
    "declaration": true,
    "pretty": true,
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
